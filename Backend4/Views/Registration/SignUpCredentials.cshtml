@model Backend4.Models.RegistrationSecondaryDataViewModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="SignUpCredentials" class="form-horizontal">

    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="Month" />
    <input type="hidden" asp-for="Day" />
    <input type="hidden" asp-for="Year" />
    <input type="hidden" asp-for="Gender" />
    <input type="hidden" asp-for="UserExisted" />


    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input asp-for="Email" type="text" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Password</label>
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Confirm password</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
                <label>
                    <input asp-for="Remembered" type="checkbox" />
                    Remember?
                </label>
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary">Complete sign up</button>
        </div>
    </div>
</form>