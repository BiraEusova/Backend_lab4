@model Backend4.Models.RegistrationPrimaryDataViewModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="Index" class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <input asp-for="LastName" type="text" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">

            <select asp-for="Day" class="form-control">
                <option disabled="disabled">Day</option>
                @for (int i = 1; i <= 31; i++)
                {
                    <option>@i</option>
                }
            </select>

            <select asp-for="Month" class="form-control">
                <option disabled="disabled">Month</option>
                <option>January</option>
                <option>February</option>
                <option>March</option>
                <option>April</option>
                <option>May</option>
                <option>June</option>
                <option>July</option>
                <option>August</option>
                <option>September</option>
                <option>October</option>
            </select>

            <select asp-for="Year" class="form-control">
                <option disabled="disabled">Year</option>
                @for (int i = 2020; i >= 1950; i--)
                {
                    <option>@i</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            <div class="radio">
                <label>
                    <input asp-for="Gender" type="radio" value="Male" />
                    Male
                </label>
            </div>
            <div class="radio">
                <label>
                    <input asp-for="Gender" type="radio" value="Female" />
                    Female
                </label>
            </div>
            <span asp-validation-for="Gender"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary">Sign up</button>
        </div>
    </div>
</form>